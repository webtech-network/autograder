"""Example environment configuration for Autograder Web API.

Copy this file to .env and update with your actual values.
"""

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./autograder.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/autograder

DATABASE_ECHO=False
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Sandbox Configuration
SANDBOX_POOL_SIZE=2

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Logging Configuration
JSON_LOGS=false  # Set to 'true' for JSON-formatted logs (recommended for production)

# Optional: OpenAI API Key for AI feedback
# OPENAI_API_KEY=your-api-key-here

# Optional: Upstash Redis for result export
# UPSTASH_REDIS_URL=your-redis-url
# UPSTASH_REDIS_TOKEN=your-redis-token
